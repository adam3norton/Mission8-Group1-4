@{
    ViewData["Title"] = "Add a Task";
}
@model Mission8_Group1_4.Models.Task

<h1>Add a Task</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="Title">Task:</label>
        <input asp-for="Title" />
        <br />
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" />
        <br />
        <label asp-for="Quadrant">Quadrant:</label>
        <select asp-for="Quadrant">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <br />
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="G">Home</option>
            <option value="PG">School</option>
            <option value="PG-13">Work</option>
            <option value="R">Church</option>
        </select>
        <br />
        <label asp-for="Completed">Completed?</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <button type="submit">Add Task</button>
        @*<input type="hidden" asp-for="" />*@
    </form>
</div>
